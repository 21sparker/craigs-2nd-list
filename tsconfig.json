{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "dist",
        "esModuleInterop": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
          ],
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
          "@controllers/*": ["./src/controllers/*"],
          "@models/*": ["./src/models/*"],
          "@views/*": ["./src/views/*"],
          "@config/*": ["./src/config/*"]
        },
    },
    "include": [
        "src/**/*"
    ]
}